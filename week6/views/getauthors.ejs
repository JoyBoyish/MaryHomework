<!DOCTYPE html>
<html>
  <head>
    <title>HR Department System</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/getbooks">List Books</a>
    <a href="/deletebook">Delete book</a>
    <a href="/addbook">Add book</a>

    <a href="/getauthors">List Author</a>
    <a href="/addauthor">Add Author</a>
    <a href="/updateauthor">Update Author</a>

    </br>
    <table>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th># Books</th>
        <th>State</th>
        <th>Suburb</th>
        <th>Street</th>
        <th>Unit</th>
        <th>ID</th>
      </tr>
      <% for (let i = 0; i < author_db.length; i++) { %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= author_db[i].name.firstName %></td>
        <td><%= author_db[i].name.lastName %></td>
        <td><%= author_db[i].birth %></td>
        <td><%= author_db[i].numBooks %></td>
        <td><%= author_db[i].address.state %></td>
        <td><%= author_db[i].address.suburb %></td>
        <td><%= author_db[i].address.street %></td>
        <td><%= author_db[i].address.unit %></td>
        <td><%= author_db[i]._id %></td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
